{
  "name": "alt-bichinhos",
  "version": "2.0.0",
  "description": "Alt Bichinhos API",
  "main": "src/app.ts",
  "_moduleAliases": {
    "src": "./build/src/"
  },
  "scripts": {
    "debug": "npm run build && npm run dev",
    "dev": "nodemon -r tsconfig-paths/register src/app.ts",
    "start": "npm run build && node build/src/app.js",
    "test": "jest --verbose ./test",
    "test:coverage": "jest --verbose ./test --coverage",
    "build": "tsc",
    "lint": "npx eslint . --fix",
    "dependencies:reset": "rm -rf node_modules && rm package-lock.json && npm install",
    "dependencies:fix": "node scripts/fixDependencies.js",
    "clear:build": "rm -rf build",
    "clear:coverage": "rm -rf coverage",
    "clear:dependencies": "rm -rf node_modules && rm package-lock.json",
    "prepare": "husky install",
    "help": "node scripts/help.js"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ashtrindade/alt-bichinhos.git"
  },
  "author": "Ash Trindade",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/ashtrindade/alt-bichinhos/issues"
  },
  "homepage": "https://github.com/ashtrindade/alt-bichinhos#readme",
  "devDependencies": {
    "@types/cors": "2.8.17",
    "@types/express": "4.17.21",
    "@types/jest": "29.5.11",
    "@types/module-alias": "2.0.4",
    "@types/node": "20.14.9",
    "@types/swagger-ui-express": "4.1.6",
    "@typescript-eslint/eslint-plugin": "6.13.2",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "8.55.0",
    "husky": "8.0.3",
    "jest": "29.7.0",
    "nodemon": "3.0.2",
    "ts-jest": "29.1.1",
    "ts-node": "10.9.2",
    "tsconfig-paths": "4.2.0",
    "typescript": "5.3.3"
  },
  "dependencies": {
    "@lunacrew/logger": "1.1.0",
    "cors": "2.8.5",
    "dotenv": "16.3.1",
    "express": "4.19.2",
    "express-rate-limit": "7.3.1",
    "joi": "17.11.0",
    "mongodb": "6.3.0",
    "passport": "0.7.0",
    "swagger-ui-express": "5.0.0",
    "uuidv4": "6.2.13"
  },
  "nodemonConfig": {
    "watch": [
      "src"
    ],
    "ext": ".ts, .js",
    "ignore": []
  },
  "private": true
}
